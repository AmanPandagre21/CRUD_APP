{{>header}}

<header>
    <div class="nav_div">
        <h1>CRUD APP</h1>
    </div>
</header>

<div class="man_div">

    <div class="add_btn">
        <a href="/">Go Back</a>
    </div>
    <div class="container center_div">
        <div class="user_form">
            <form action="/api/users" method="post" id="add">
                <div class="row">
                    <div class="col">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" placeholder="Full Name"
                            aria-label="Full Name">
                    </div>
                    <div class="col">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email" placeholder="Email" aria-label="email">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label>Phone</label>
                        <input type="text" class="form-control" name="phone" placeholder="Mobile Number"
                            aria-label="phone">
                    </div>
                    <div class="col">
                        <label>Gender</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="male">
                            <label class="form-check-label" for="inlineRadio1">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="female">
                            <label class="form-check-label" for="inlineRadio2">Female</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control address" name="address" placeholder="Enter your addres"
                        aria-label="address">
                </div>

                <div class="form-group">
                    <label>STATUS</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="status" id="statusRadio1" value="active">
                        <label class="form-check-label" for="statusRadio1">Active</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="status" id="statusRadio2" value="deactive">
                        <label class="form-check-label" for="statusRadio2">Deactive</label>
                    </div>
                </div>
                <center>
                    <input type="submit" name="sub" class="btn btn-primary" value="ADD">
                </center>
            </form>
        </div>
    </div>
</div>

{{>footer}}