{{>header}}

<header>
    <div class="nav_div">
        <h1>CRUD APP</h1>
    </div>
</header>

<div class="man_div">

    <div class="add_btn">
        <a href="/">Go Back</a>
    </div>
    <div class="container center_div">
        <div class="user_form">
            <form method="post" id="update_form">
                <input type="hidden" value="{{users._id}}" id="updateId">
                <div class="row">
                    <div class="col">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" value="{{users.name}}"
                            placeholder="Full Name" aria-label="Full Name">
                    </div>
                    <div class="col">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email" value="{{users.email}}" placeholder="Email"
                            aria-label="email">
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label>Phone</label>
                        <input type="text" class="form-control" name="phone" value="{{users.phone}}"
                            placeholder="Mobile Number" aria-label="phone">
                    </div>
                    <div class="col">
                        <label>Gender</label><br>
                        
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="male" {{#ifCond users.gender "==" "male"}} checked {{/ifCond}}>
                            <label class=" form-check-label" for="inlineRadio1">Male</label>
                        </div>
                        
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="female" {{#ifCond users.gender "==" "female"}} checked {{/ifCond}} >
                            <label class=" form-check-label" for="inlineRadio2">Female</label>
                        </div>
                        
                    </div>
                </div>

                <div class="form-group">
                    <label>Address</label> 
                    <input type="text" class="form-control address" name="address" value="{{users.address}}" placeholder="Enter your addres"
                        aria-label="address">
                </div>

                <div class="form-group">
                    <label>STATUS</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="status" id="statusRadio1" value="active" {{#ifCond users.status "==" "active"}} checked {{/ifCond}}>
                        <label class="form-check-label" for="statusRadio1">Active</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="status" id="statusRadio2" value="deactive" {{#ifCond users.status "==" "deactive"}} checked {{/ifCond}}>
                        <label class="form-check-label" for="statusRadio2">Deactive</label>
                    </div>
                </div>
                <center>
                    <input type="submit" name="sub" class="btn btn-primary" value="UPDATE">
                </center>
            </form>
        </div>
    </div>
</div>

{{>footer}}